<div class="card-group">
  <div class="card">
    <div class="card-header">
      <div>
        <h5>Danh sách người nợ</h5>
        <p> Total: <span id="totalRecord"></span> Record(s)</p>
      </div>
      <div>
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#addDebtorModal">
          <i class="fa-solid fa-plus"></i>
          Thêm người nợ
        </button>
      </div>
    </div>
    <div class="card-body">
      <div class="body">
        <div class="row">
          <div class="col-lg-3">
            <div class="filterDebtor">
              <div class="row mt-3">
                <button type="button" class="btn btn-info" onclick="clearFilterDebtor()">Clear filter</button>
              </div>
              <div class="row mt-3">
                <label class="col-5 col-form-label">Name</label>
                <div class="col-7">
                  <input type="text" class="form-control" id="nameFilter" oninput="filterDebtor()" />
                </div>
              </div>
              <div class="row mt-3">
                <label class="col-5 col-form-label">Address</label>
                <div class="col-7">
                  <input type="text" class="form-control" id="addressFilter" oninput="filterDebtor()" />
                </div>
              </div>
              <div class="row mt-3">
                <label class="col-5 col-form-label">Phone</label>
                <div class="col-7">
                  <input type="number" class="form-control" id="phoneFilter" oninput="filterDebtor()" />
                </div>
              </div>
              <div class="row mt-3">
                <label class="col-5 col-form-label">Email</label>
                <div class="col-7">
                  <input type="number" class="form-control" id="emailFilter" oninput="filterDebtor()" />
                </div>
              </div>
              <div class="row mt-3">
                <label class="col-5 col-form-label">TotalDebt</label>
                <div class="col-7">
                  <input type="number" class="form-control" placeholder="from" id="minMonney"
                    oninput="filterDebtor()" />
                </div>
              </div>
              <div class="row">
                <label class="col-5 col-form-label"></label>
                <div class="col-7">
                  <input type="number" class="form-control" placeholder="to" id="maxMonney" oninput="filterDebtor()" />
                </div>
              </div>
              <div class="row mt-3">
                <label class="col-5 col-form-label">CreateAt</label>
                <div class="col-7">
                  <input type="datetime-local" class="form-control" id="minCreateAt" onchange="filterDebtor()" />
                </div>
              </div>
              <div class="row">
                <label class="col-5 col-form-label"></label>
                <div class="col-7">
                  <input type="datetime-local" class="form-control" id="maxCreateAt" onchange="filterDebtor()" />
                </div>
              </div>
              <div class="row mt-3">
                <label class="col-5 col-form-label">updateAt</label>
                <div class="col-7">
                  <input type="datetime-local" class="form-control" id="minUpdateAt" onchange="filterDebtor()" />
                </div>
              </div>
              <div class="row">
                <label class="col-5 col-form-label"></label>
                <div class="col-7">
                  <input type="datetime-local" class="form-control" id="maxUpdateAt" onchange="filterDebtor()" />
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-9">
            <div class="card-links">
              <div class="row" id="cards">

              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
    <div class="card-footer">
      <div class="row">
        <div class="col-sm-4 justify-content-center">
          <button class="btn btn-light" onclick="prePageDebtor()" id="prePage" disabled>Previous</button>
        </div>
        <div class="col justify-content-center">
          <span>Page
            <input type="number" id="currentPage" onchange="choosePageDebtor()" />/<span id="pages"></span>
          </span>
          <select id="perPage" onchange="filterDebtor()">
            <option value="6">6 record</option>
            <option value="12">12 record</option>
            <option value="60">60 record</option>
          </select>
        </div>
        <div class="col-sm-4 justify-content-center">
          <button class="btn btn-light" onclick="nextPageDebtor()" id="nextPage">Next</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="addDebtorModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div class="card-group">
          <div class="card">
            <div class="card-header">
              <h5>Thông tin người nợ</h5>
            </div>
            <div class="card-body">
              <form>
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Full name (*)</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" id="fullname">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Phone</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" id="phone">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Address</label>
                  <div class="col-sm-9">
                    <textarea type="text" class="form-control" id="address"></textarea>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Email </label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" id="email">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Tổng nợ</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" value="0" disabled>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label"></label>
                  <div class="col-sm-9">
                    Không
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-sm-3"></div>
                  <div class="col-sm-9">
                    <button type="submit" class="btn btn-info" id="addNewDebtor">
                      Create New
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    addDebtor();
    debtor();
  });
</script>