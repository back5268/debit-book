<script>
    const debts = document.querySelectorAll('.debts'); 
    debts.forEach(debt => {
        debt.addEventListener('click', event => {
            debts.forEach(d => {
                d.classList.remove('choose');
            });
            event.target.classList.add('choose');
        })
    })
</script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        addDebt();
        handleUpdateDebtor(); searchDebt(); deleteDebt(); showDebt(); nextPageDebt();
        prePageDebt(); formatInfo(); textErr()
    });
</script>

<script>
    let monney = document.querySelector('#monney'); monney.oninput = function () {
        setInterval(() => {
            let textMonney = document.querySelector('#textMonney');
            textMonney.innerText = convertMoneyToString(Number(monney.value));
        }, 1000);
    }
</script>