<div class="card-group">
    <div class="card">
        <div class="card-header">
            <div class="header">
                <div>
                    <h5>{{debtor.fullname}}</h5>
                    <p id="totalRecord"></p>
                </div>
                <ul class="nav nav-tabs">
                    <li class="nav-item" id="showDebt">
