<div class="card-group">
  <div class="card">
    <div class="card-header">
      <div>
        <h5>Danh sach nguoi no</h5>
        <span>Total: 27 record(s)</span>
      </div>
      <div>
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#addDebtorModal">
          <i class="fa-solid fa-plus"></i>
          Them nguoi no
        </button>
      </div>
    </div>
    <div class="card-body">
      <div class="card-links">
        <div class="row">
          {{#each debtors}}
          <div class="col-sm-6 col-lg-4">
            <div class="card card-link">
              <a href="/finance/detail/{{ this.slug }}">
                <div class="card-body">
                  <h5 class="card-title">{{ sum @index 1 }}. {{ this.fullname }}</h5>
                  <div class="row">
                    <div class="col-sm-4 card-text">Ngày tạo:</div>
                    <div class="col-sm-8 card-text"> {{ this.createAt }} </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-4 card-text">Cập nhật:</div>
                    <div class="col-sm-8 card-text"> {{ this.updateAt }} </div>
                  </div>
                </div>
                <div class="card-body card-body-hover">
                  <h5 class="card-title">{{sum @index 1}}. {{ this.fullname }} </h5>
                  <div class="row">
                    <div class="col-sm-3 card-text">SĐT:</div>
                    <div class="col-sm-9 card-text"> {{ this.phone }} </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-3 card-text">Email:</div>
                    <div class="col-sm-9 card-text"> {{ this.email }} </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-3 card-text">Địa chỉ:</div>
                    <div class="col-sm-9 card-text"> {{ this.address }} </div>
                  </div>
                </div>
                <div class="card-footer">
                  <h5>Tổng nợ:</h5>
                  <h5> {{ this.totalLiabilities }} </h5>
                </div>
              </a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>

    </div>
    <div class="card-footer">
      <div class="row">
        <div class="col-sm-4 justify-content-center">
          <button class="btn">Previous</button>
        </div>
        <div class="col justify-content-center">
          <span>Page <input type="number" value="1" /> /2</span>
        </div>
        <div class="col-sm-4 justify-content-center">
          <button class="btn">Next</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="addDebtorModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div class="card-group">
          <div class="card">
            <div class="card-header">
              <h5>Thông tin người nợ</h5>
            </div>
            <div class="card-body">
              <form>
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Full name (*)</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" id="fullname">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Phone</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" id="phone">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Address</label>
                  <div class="col-sm-9">
                    <textarea type="text" class="form-control" id="address"></textarea>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Email </label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" id="email">
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label">Tổng nợ</label>
                  <div class="col-sm-9">
                    <input type="text" class="form-control" id="liabitities" value="0" disabled>
                  </div>
                </div>
                <div class="form-group row">
                  <label class="col-sm-3 col-form-label"></label>
                  <div class="col-sm-9">
                    Không
                  </div>
                </div>
                <div class="form-group row">
                  <div class="col-sm-3"></div>
                  <div class="col-sm-9">
                    <button type="submit" class="btn btn-info" id="addNewDebtor">
                      Create New
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    handleAddDebtor();
  });
</script>