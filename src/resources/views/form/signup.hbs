<div class="main">
  <form action="/signup" method="POST" class="form" id="form">

    <h3 class="heading">Đăng ký</h3>
    <div class="form-group mt-4">
      <label for="email" class="form-label">Email (*)</label>
      <input
        id="email"
        name="email"
        type="text"
        placeholder="VD: email@domain.com"
        class="form-control"
      />
      <span class="form-message"></span>
    </div>

    <div class="form-group">
      <label for="account" class="form-label">Account (*)</label>
      <input
        id="account"
        name="account"
        type="text"
        placeholder="VD: Nhập tài khoản"
        class="form-control"
      />
      <span class="form-message"></span>
    </div>

    <div class="form-group">
      <label for="password" class="form-label">Mật khẩu (*)</label>
      <input
        id="password"
        name="password"
        type="password"
        placeholder="Nhập mật khẩu"
        class="form-control"
      />
      <span class="form-message"></span>
    </div>

    <div class="form-group">
      <div class="svg-captcha">
        <img src="/captcha" id="captcha-img" />
        <div class="captchas">
          <input
            id="captcha"
            name="captcha"
            type="text"
            placeholder="Captcha"
            class="captcha"
          />
          <button type="button" id="change-captcha"><i
              class="bx bx-rotate-left icon"
            ></i></button>
        </div>
      </div>
    </div>
    <button class="form-submit" id="form-submit">Đăng ký</button>

    <div class="spacer mt-4"></div>
    <div class="row">
      <div class="col-12"><a href="/login">Quay lại đăng nhập</a></div>
    </div>
  </form>
</div>

<script src="/js/Validator.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    Validator({
      form: '#form',
      formGroupSelector: '.form-group',
      errorSelector: '.form-message',
      rules: [
          Validator.isRequired('#fullname', 'Vui lòng nhập tên đầy đủ của bạn'),
          Validator.isEmail('#email'),
          Validator.isRequired('#account', 'Vui lòng nhập tài khoản của bạn'),
          Validator.isRequired('#password', 'Vui lòng nhập mật khẩu'),
          Validator.minLength('#password', 6),
      ],
    });
    handleChangCaptcha();
    handleSignup();
  });
</script>