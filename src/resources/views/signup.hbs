<div class="main">
  <form action="/signup" method="POST" class="form" id="form">

    <h3 class="heading">Đăng ký</h3>
    <p class="desc">Đăng ký thành viên</p>
    <span class="err">{{ error }}</span>

    <div class="form-group mt-4">
      <label for="name" class="form-label">Tên đầy đủ (*)</label>
      <input
        id="name"
        name="name"
        type="text"
        placeholder="VD: Lê Trần Tiến Đông"
        class="form-control"
      />
      <span class="form-message"></span>
    </div>

    <div class="form-group">
      <label for="email" class="form-label">Email (*)</label>
      <input
        id="email"
        name="email"
        type="text"
        placeholder="VD: email@domain.com"
        class="form-control"
      />
      <span class="form-message"></span>
    </div>

    <div class="form-group">
      <label for="password" class="form-label">Mật khẩu (*)</label>
      <input
        id="password"
        name="password"
        type="password"
        placeholder="Nhập mật khẩu"
        class="form-control"
      />
      <span class="form-message"></span>
    </div>

    <div class="form-group">
      <div class="svg-captcha">
        <img src="{{ captchaURL }}" id="captcha-img" />
        <div>
            <input
            id="captcha"
            name="captcha"
            type="text"
            placeholder="Captcha"
            class="captcha"
            />
            <button type="button" id="change-captcha">Đổi</button>
          </div>
      </div>
    </div>
    <button class="form-submit">Đăng ký</button>

    <div class="spacer mt-4"></div>
    <div class="row">
      <div class="col-12"><a href="/login">Quay lại đăng nhập</a></div>
    </div>
  </form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    Validator({
      form: '#form',
      formGroupSelector: '.form-group',
      errorSelector: '.form-message',
      rules: [
          Validator.isRequired('#name', 'Vui lòng nhập tên đầy đủ của bạn'),
          Validator.isEmail('#email'),
          Validator.minLength('#password', 6),
      ],
    });
    changeCaptcha();
  });
</script>