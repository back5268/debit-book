<div class="card-group">
  <div class="card">
    <div class="card-header">
      <div>
        <h5>Danh sách khoản nợ đã xóa</h5>
        <p>Total: <span id="totalRecord"></span> record(s)</p>
      </div>
      <div>
        <a href="./">
          <button type="button" class="btn btn-info">
            <i class="bx bx-notepad"></i>
            Sổ ghi nợ
          </button>
        </a>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="sort">
          <label for="#nameDebtor">Tên người nợ</label>
          <select id="nameDebtor" onchange="handleTrash()">
            {{#each data}}
            <option value="{{ this.slug }}"> {{ this.fullname }} </option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="trash-body">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">
                STT
              </th>
              <th scope="col" class="sortDebt">
                <div class="sortDebtAsc" onclick="sortByNoteTrashAsc()"></div>
                <div class="sortDebtDesc" onclick="sortByNoteTrashDesc()"></div>
                Ghi chú
              </th>
              <th scope="col" class="sortDebt">
                <div class="sortDebtAsc" onclick="sortByTypeTrashAsc()"></div>
                <div class="sortDebtDesc" onclick="sortByTypeTrashDesc()"></div>
                Loại nợ
              </th>
              <th scope="col" class="sortDebt">
                <div class="sortDebtAsc" onclick="sortByMonneyTrashAsc()"></div>
                <div class="sortDebtDesc" onclick="sortByMonneyTrashDesc()"></div>
                Số tiền
              </th>
              <th scope="col" class="sortDebt">
                <div class="sortDebtAsc" onclick="sortByTimeDebtTrashAsc()"></div>
                <div class="sortDebtDesc" onclick="sortByTimeDebtTrashDesc()"></div>
                Ngày lập phiếu
              </th>
              <th scope="col" class="sortDebt">
                <div class="sortDebtAsc" onclick="sortByCreateAtTrashAsc()"></div>
                <div class="sortDebtDesc" onclick="sortByCreateAtTrashDesc()"></div>
                Thời gian tạo
              </th>
              <th scope="col" class="sortDebt chooseSortAsc">
                <div class="sortDebtAsc" onclick="sortByDeleteAtTrashAsc()"></div>
                <div class="sortDebtDesc" onclick="sortByDeleteAtTrashDesc()"></div>
                Thời gian tạo
              </th>
              <th scope="col">Action</th>
            </tr>
            <tbody></tbody>
          </thead>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="restoreDebt" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document" style="width: 30vw;">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Khôi phục khoản nợ</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Bạn có chắc chắn muốn khôi phục khoản nợ này hay không
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" id="restoreDebtBtn">Khôi phục</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    trash();
    handleRestoreDebt()
  });
</script>

<script>
    const sortDebtAsc = document.querySelectorAll('.sortDebtAsc');
    const sortDebtDesc = document.querySelectorAll('.sortDebtDesc');
    const sortDebt = document.querySelectorAll('.sortDebt');
    sortDebtAsc.forEach(sa => {
        sa.addEventListener('click', e => {
            sortDebt.forEach(s => {
                s.classList.remove('chooseSortAsc');
                s.classList.remove('chooseSortDesc');
            })
            e.target.parentNode.classList.add('chooseSortAsc');
        })
    })
    sortDebtDesc.forEach(sd => {
        sd.addEventListener('click', e => {
            sortDebt.forEach(s => {
                s.classList.remove('chooseSortAsc');
                s.classList.remove('chooseSortDesc');
            })
            e.target.parentNode.classList.add('chooseSortDesc');
        })
    })
    
</script>