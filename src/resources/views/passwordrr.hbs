<div class="main">
  <form class="form" id="form" action="/passwordrr" method="post">
    <h3 class="heading">Reset Password</h3>

    <div class="spacer"></div>
    <div class="form-group">
      <label for="email" class="form-label">Email (*)</label>
      <input
        id="email"
        name="email"
        type="text"
        placeholder="VD: email@domain.com"
        class="form-control"
      />
      <span class="form-message"></span>
    </div>

    <div class="form-group">
      <div class="svg-captcha">
        <img src="{{ captchaURL }}" id="captcha-img" />
        <div>
          <div>
            <input
            id="captcha"
            name="captcha"
            type="text"
            placeholder="Captcha"
            class="captcha"
            />
            <button type="button" id="change-captcha">Đổi</button>
          </div>
          <span class="form-message"></span>
        </div>
      </div>
    </div>
    <button type="submit" class="form-submit">Submit</button>
  </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
    Validator({
      form: '#form',
      formGroupSelector: '.form-group',
      errorSelector: '.form-message',
      rules: [
          Validator.isEmail('#email'),
      ],
    });
    changeCaptcha();
  })
</script>